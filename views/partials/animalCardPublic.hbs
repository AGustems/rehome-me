<div class="box animal">  
  <div class="col">
    <div class="avatar">
      <a href="/animal/{{_id}}">
        <img src="{{image}}" alt="">
      </a>
    </div>
  </div>
  <div class="col">
    <a href="/animal/{{_id}}">
      <ul>
        <li class="name"><h3>{{name}}</h3></li>
        <li class="size">Size: {{size}}</li>
      </ul>
    </a>
  </div>
</div>