<div class="card flex">
  <div class="col">
    <div class="avatar">
      <a href="/animal/{{animal._id}}">
        <img src="{{animal.image}}" alt="">
      </a>
    </div>
  </div>
  <div class="col">
    <ul>
      <li class="name">
        <h3>{{animal.name}}</h3>
      </li>
      <li><span class="lnr lnr-flag"></span> {{animal.type}}</li>
      <li><span class="lnr lnr-tag"></span> {{status}}</li>
    </ul>
  </div>
</div>