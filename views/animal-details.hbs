<main id="details-main">
  <h2>Hi there! I'm {{findAnimal.name}}</h2>
  <section class="animal-data">
    <div class="animal-photo">
      <img src="{{findAnimal.image}}" alt="{{findAnimal.name}}'s photo'">
    </div>
    <div class="details-list">
      <ul>
        <li><b>Name: </b>{{findAnimal.name}}</li><br>
        <li><b>Category: </b>{{findAnimal.category}}</li><br>
        <li><b>Size: </b>{{findAnimal.size}}</li><br>
        <li><b>CheckIn / CheckOut: </b>{{checkInDate}} /
        <br>
         {{checkOutDate}}</li><br>
        {{#if findAnimal.specialNeeds}}
        <li><b>Animal with special needs</b></li>
        {{/if}}
      </ul>
    </div>
  </section>
  <section class="animal-text">
    <div class="animal-description">
      <h3>Animal Description</h3><br>
      <p>{{findAnimal.description}}</p>
    </div>
    <div class="animal-routine">
      <h3>Care Routine</h3><br>
      <p>{{findAnimal.careRoutine}}</p>
    </div>
  </section>
</main>